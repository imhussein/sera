<div class="row">
  {{#each categoryPosts}}
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card mb-3">
        <div class="img-holder">
          <img src="/assets/uploads/posts/{{image}}" class="img-thumbnail card-img-top">
          <a href="/post/{{_id}}" class="img-link"></a>
        </div>
        <h4 class="card-header">
          <a href="/post/{{_id}}" style="text-decoration: none;">{{title}}</a>
        </h4>
        <div class="card-body">
          <div class="mb-1">
            <span class="text-muted"><i class="far fa-user icon"></i><a href="/author/{{user}}" class="btn btn-link btn-sm text-muted font-weight-bold">{{user}}</a></span>
          </div>
          <p class="lead text-muted">
            {{trimString details 0 90}}
          </p>
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-sm-6">
              <small class="text-muted">
                <i class="far fa-clock icon"></i>{{formatDate created_at day="numeric" month="numeric" year="numeric"}}
              </small>
            </div>
            <div class="col-md-6 text-right">
              <a href="/categories/{{category}}" class="btn btn-sm bg-main text-white"><i style="vertical-align: middle;" class="fas fa-tag"></i> {{category}}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="pagination-holder mb-5 mt-3">
      <nav aria-label="Page navigation">
        <ul class="pagination pagination-lg justify-content-center">
          {{#each pagesCount}}
            <li class="page-item"><a class="page-link" href="/page/{{page}}">{{sum page 1}}</a></li>
          {{/each}}
        </ul>
      </nav>
    </div>
  </div>
</div>