<div class="card mb-3">
  <h3 class="card-header text-center">Edit Post</h3>
  <div class="card-body">
    <form action="/admin/posts/edit/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-group">
        <label for="title">Add Post Title</label>
        <input type="text" name="title" id="title" class="form-control form-control-lg" placeholder="Add Post Title" value="{{post.title}}">
      </div>
      <div class="form-group">
        <label for="categories">Select Categories</label>
        <select name="category" id="category" class="form-control">
          {{#each categories}}
            <option value="{{category_title}}">{{category_title}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="details" class="form-label">Add Post Details</label>
        <textarea name="details" id="details" cols="30" rows="10" class="form-control" placeholder="Add Post Details">{{post.details}}</textarea>
      </div>
      <div class="form-group custom-file">
        <input type="file" name="image" id="image" class="custom-file-input post-thumbnail-input">
        <label for="image" class="custom-file-label">Upload Post Thumbnail</label>
      </div>
      <div class="mb-3 mt-3">
        <img src="/assets/uploads/posts/{{post.image}}" width="40%" class="post-thumbnail-image">
      </div>
        <input type="submit" value="Update Post" class="btn btn-success">
      </div>
    </form>
  </div>
</div>